<header class="header">

	<div class="">
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<main class="main">
	<div class="main_content">
		<h1 class="main_heading">{{heading}}</h1>
		<p class="main_description">{{descriotion}}</p>
		<a href="{{href}}" class="button main_button">{{button}}</a>
	</div>
	<img src="{{image}}" alt="main image" class="main_image">
</main>
{{/with}}

<div class="featured">
	{{#each featured}}
	<div class="card">
		<div class="card_photo" style="background-image: url({{photo}});"></div>
		<h2 class="card_heading">{{heading}}</h2>
		<p class="card_info">{{info}}</p>
		<a href="{{linkUrl}}" class="card_link">{{linkText}}</a>
	</div>
	{{/each}}
</div>

{{#with actions}}
<div class="actions">
	{{#each this}}
	<div class="actions_content">
		<h3 class="actions_heading">{{heading}}</h3>
		<a href="{{url}}" class="button actions_button">{{text}}</a>
	</div>
	{{/each}}
</div>
{{/with}}

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>