<header class="header">
	{{#with header}}
	{{> headerDark}}
	{{/with}}
</header>

<section class="hero">
	{{#with hero}}
	<div class="hero_content">
		<h1 class="hero_title">{{title}}</h1>
		<p class="hero_description">{{description}}</p>
		{{#with button}}
		<a class="hero_button" href="{{url}}">{{text}}</a>
		{{/with}}
	</div>
	{{/with}}
</section>

<section class="about">
	{{#with about}}
	<div class="about_content">
		<h2 class="about_heading">{{heading}}</h2>
		<p class="about_info">{{info}}</p>
	</div>
	{{/with}}
</section>

<main class="main">
	<div class="main_top">
		<h2 class="main_title">Our Articles</h2>
		<button class="main_button">View all</button>
	</div>
	<div class="main_content">
		{{#each articles}}
		{{> articleCardDark}}
		{{/each}}
	</div>
</main>

<footer class="footer">
	{{#with footer}}
	{{> footerDark}}
	{{/with}}
</footer>